{
  "manifest_version": 3,
  "name": "Lovable.dev Assistant",
  "version": "1.0.0",
  "description": "Intelligent prompt assistance and conversation management for Lovable.dev",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://lovable.dev/*",
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://lovable.dev/projects/*"],
      "js": [
        "markdown-formatter.js",
        "content_scripts/lovable-detector.js",
        "content_scripts/conversation-capture-simple.js",
        "content_scripts/ui-injector.js"
      ],
      "css": ["assets/styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Lovable.dev Assistant",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/styles/*.css",
        "content_scripts/*.js",
        "markdown-formatter.js"
      ],
      "matches": ["https://lovable.dev/*"]
    }
  ]
}